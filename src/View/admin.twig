{% extends 'layout/layout.twig' %}

{% block subtitle %}Connecté(e){% endblock %}

{% block description %}{% endblock %}

{% block main %}
    <main class="white">
        <section class="introduction">
            <h1>Connecté(e)</h1>
            <p>Bienvenue sur l'espace d'administration {{ pseudo }}.</p>
        </section>

        <section class="administration">
            <p>Vous pouvez dès à présent faire des modifications.</p>
            <a class="link_other" href="{{ url('user!logout') }}"><button class="other" type="button">Se déconnecter</button></a>
        </section>
        <div class="admin_update">
            <a href="{{ url("articles!create") }}">Ajouter un chapitre</a>
            <section class="tous_billets">
                {% for billet in billets %}
                    <section class="billets">
                        <h2>
                            {{ billet.titre }}
                        </h2>
                        <p>
                            {{ billet.contenu }}
                        </p>
                        <a href="{{ url('articles!update', {'id': billet.id}) }}">Modifier</a>
                        <a href="{{ url("articles!delete", {'id': billet.id}) }}">Supprimer</a>
                        <a href="{{ url("articles!read", {'id': billet.id}) }}">Voir les commentaires</a>


                    </section>
                {% endfor %}
            </section>
        </div>
    </main>
{% endblock %}